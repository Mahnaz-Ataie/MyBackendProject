<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>New Post</title>
 
  </head>
  <body>
    
    <%- include("partials/header.ejs") %>

    <h1 class="title-post">Create New Post</h1>
    <form action="/newpost" method="post" enctype="multipart/form-data">
      <div class="container">
      <label for="title">Title:</label><br />
      <input type="text" id="title" name="title" class="Feedback-input" required /><br />

      <label for="description">Description:</label><br />
      <textarea
        id="id"
        name="description"
        rows="5"
        cols="60"
        class="Feedback-input"
        required
      ></textarea
      ><br />

      <label for="imageUrl">Upload Image:</label><br />

      <input type="file" id="imageUrl" name="imageUrl" accept="image/jpeg, image/png, image/jpg" required /><br />
  <img  class="placeholder"
  src="images/placeholder.png" alt="picture" id="profile-pic"  name="image"><br>
      <button type="submit">Create Post</button>
      
    </div>
    </form>



<%- include("partials/footer.ejs") %>
  </body>
</html>
